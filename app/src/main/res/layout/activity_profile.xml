                    android:layout_centerVertical="true"
                    android:background="#cfcfcf" />



                <RelativeLayout
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_centerVertical="true"
                        android:id="@+id/logout"
